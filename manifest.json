{
  "manifest_version": 3,
  "name": "Substack Notes Search",
  "version": "1.0",
  "description": "Search your Substack Notes with one click",
  "permissions": [
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "*://*.substack.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
